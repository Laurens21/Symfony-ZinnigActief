{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table style="color: white;" class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.Longitude }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ location.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('location_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-secondary" href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
    {% endif %}

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
