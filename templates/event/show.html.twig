{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table style="color: white;" class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ event.end ? event.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ event.min }}</td>
            </tr>
            <tr>
                <th>Max</th>
                <td>{{ event.max }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description|raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src={{ vich_uploader_asset(event, 'imageFile') }} width="45px" height="45px"></td>
            </tr>
        </tbody>
    </table>
    <div style="display: flex;">
    <a style="margin-right: 5px;" class="btn btn-primary" href="{{ path('event_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_LEADER') %}
    <a style="margin-right: 5px;" class="btn btn-secondary" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
    {% endif %}

    {{ include('event/_delete_form.html.twig') }}
    </div>
{% endblock %}
